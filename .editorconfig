root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{c,cpp,h,hpp}]
charset = utf-8-bom

[*.{bat,cmd,reg}]
charset = unset
end_of_line = crlf

[*.{sln,vcxproj,vcxproj.filters}]
charset = utf-8-bom
end_of_line = crlf

[*.reg]
charset = utf-16le
end_of_line = crlf
